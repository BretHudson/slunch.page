html, body
	min-height: 100%

html
	height: 100%
	-ms-text-size-adjust: 100%
	-webkit-text-size-adjust: 100%
	font-family: Helvetica
	@media (max-width: 767.98px)
		font-size: 12px
	@media (min-width: 768px) and (max-width: 991.98px)
		font-size: 13px
	@media (min-width: 992px) and (max-width: 1199.98px)
		font-size: 14px
	@media (min-width: 1200px)
		font-size: 16px

flexCenter()
	display: flex
	flex-direction: column
	justify-content: center
	align-items: center

body
	flexCenter()
	background-color: black
	color: white
	margin: 0
	padding: 0
	width: 100%
	height: 100%

header
	font-family: 'Fascinate Inline', cursive
	font-size: 4rem
	font-style: italic
	text-shadow: 0.1em 0.1em 0.1em var(--color)
	margin-bottom: 2rem

main
	position: relative
	width: calc(960px)
	max-width: 90%
	margin: 1rem
	&::before
		content: ''
		display: block
		padding-bottom: 56.25%
	&::after
		content: ''
		pointer-events: none
		position: absolute
		left: -1rem
		right: -1rem
		top: -1rem
		bottom: -1rem
		border: 4px dashed var(--color)

input[type=file]
	display: none
	+ label
		flexCenter()
		cursor: pointer
		position: absolute
		user-select: none
		left: 0
		top: 0
		width: 100%
		height: 100%
		font-size: 1.35rem
		text-transform: uppercase
		transition: 2s background-color
		&.drag
			background-color: red
		background-color: rgba(white, 0.2)
		main:not(.state-upload) &
			display: none
		strong
			display: inline-block

canvas
	position: absolute
	left: 0
	top: 0
	width: 100%
	height: 100%
	background-color: #333
	font-family: 'Bubblegum Sans', cursive
	main:not(.state-edit) &
		display: none

input[type=text]
	padding: 5px 10px
